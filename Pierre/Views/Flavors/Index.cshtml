@{
  Layout = "_Layout";
}

@using Pierre.Models;

<br>
<h1>Flavors</h1>

<hr>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 

@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.FlavorTown}", "Details", new { id = flavor.FlavorId }, new { @class = "linky"} )</li>
}

<hr>

<p>@Html.ActionLink("Add new flavor", "Create", new { id = "nav"}, new { @class = "linky"} )</p>