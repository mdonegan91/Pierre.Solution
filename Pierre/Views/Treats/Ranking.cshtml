@{
  Layout = "_Layout";
}

@using Pierre.Models;

<br>
<h1>Treats Sorted By Ranking</h1>

<hr>

@if (User.Identity.IsAuthenticated)
{
  @if (@Model.Count == 0)
  {
    <h3>No treats have been added yet</h3>
  }

  <ul>
  @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId }, new { @class = "linky"} ) | @Html.ActionLink($"{treat.Ranking}", "Details", new { id = treat.TreatId }, new { @class = "linky"} )</li>
    }
  </ul>
}
else
{
  <h4>Treats</h4>
  <p>Please @Html.ActionLink("log in", "LogIn", "Account") to view or manage your treats.</p>
}

<hr>

@using (Html.BeginForm("Search","Treats")) {
<div class="search-container">
        <input type="text" name="search" placeholder="Search All Treats..." class="search-input">
        <a href="#" class="search-btn">
                <i class="fas fa-search"></i>      
        </a>
    </div>
}