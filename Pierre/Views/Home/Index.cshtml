@{
  Layout = "_Layout";
}

@using Pierre.Models;
<br>
<h1>Welcome to Pierre's</h1>

<hr>
@if (User.Identity.IsAuthenticated)
{
  <h4>Your Treats:</h4>
  @if (Model["treats"].Length == 0)
  {
    <p>No treats have been added yet!</p>
  } 
  <ul>
    @foreach (Treat treat in Model["treats"])
    {
      <li>@Html.ActionLink(@treat.TreatName, "Details", "Treats", new { id = @treat.TreatId}, new { @class = "linky"} )</li>
    }
  </ul>
}
else
{
  <h4>Treats</h4>
  <p>Please @Html.ActionLink("log in", "LogIn", "Account", new { id = "nav"}, new { @class = "linky"} ) to view or manage your treats.</p>
}

<hr>

<p>@Html.ActionLink("Treats from All Chefs", "Ranking", "Treats", new { id = "nav"}, new { @class = "linky"} )</p>

<hr>

<p>@Html.ActionLink("Manage treats", "Index", "Treats", new { id = "nav"}, new { @class = "linky"} ) | @Html.ActionLink("Manage flavors", "Index", "Flavors", new { id = "nav"}, new { @class = "linky"} )</p>
<p>@Html.ActionLink("Create or manage an account", "Index", "Account", new { id = "nav"}, new { @class = "linky"} )</p>